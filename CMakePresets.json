{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "amiga",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/temp",
      "toolchainFile": "${sourceDir}/external/AmigaCMakeCrossToolchains/m68k-bartman.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "TOOLCHAIN_PATH": "$env{TOOLCHAIN_PATH}/opt",
        "TOOLCHAIN_PREFIX": "m68k-amiga-elf",
        "TOOLCHAIN_CXXFLAGS": "-fno-rtti -std=c++20",
        "TOOLCHAIN_COMMON": "-Wall -Wextra"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "amiga",
      "configurePreset": "amiga"
    }
  ]
}
